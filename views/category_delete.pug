extends layout

block content
  h1 #{title}: #{category.name}

  if items.length
    p #[strong Update/delete the following items before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')
      h4 Items

      ul
      each val in items
        li 
            a(href=val.url) #{val.name}

  else
    p Do you really want to delete this category?

    form(method='POST' action='')
      div
        input#categoryid(type='hidden',name='categoryid', required='true', value=category._id )

      button(type='submit') Delete
