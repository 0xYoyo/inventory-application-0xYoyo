extends layout 

block content 

    h1 #{title}

    form(action="" method="POST")
        ul 
            li.from-group
                label(for="name") Name: 
                input.form-control(type="text" id="name" name="name" placeholder='Accessories' required= 'true' value=(category===undefined ? '' : category.name)) 
            li.from-group
                label(for="description") Description: 
                input.form-control(type="text" id="description" name="description" placeholder='24 Karat gold bracelet' value=(category===undefined ? '' : category.description)) 
        button.btn.btn-primary(type="submit") Submit
    
    if errors
        ul 
            for error in errors
                li!= error.msg